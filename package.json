{
  "name": "gasbag",
  "version": "1.0.0",
  "description": "A very talkative REST automation and testing tool for developers. The focus is on utilising templates for the requests to avoid duplication. Awesome Git integration and other features to make developers happy.",
  "main": "public/main.js",
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder",
    "release": "yarn react-build && electron-builder --publish=always",
    "build": "yarn react-build && yarn electron-build",
    "start": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron .\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anssip/gasbag.git"
  },
  "keywords": [
    "REST",
    "API",
    "testing",
    "automation",
    "Electron",
    "JavaScript",
    "node.js"
  ],
  "author": "Anssi Piirainen",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/anssip/gasbag/issues"
  },
  "homepage": "./",
  "devDependencies": {
    "concurrently": "^4.1.0",
    "electron": "^4.0.3",
    "electron-builder": "^20.38.5",
    "prettier": "^1.16.3",
    "react-scripts": "^2.1.3",
    "wait-on": "^3.2.0"
  },
  "dependencies": {
    "cross-env": "^5.2.0",
    "electron-is-dev": "^1.0.1",
    "electron-log": "^3.0.0",
    "ramda": "^0.26.1",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-split-pane": "^0.1.85",
    "styled-components": "^4.1.3",
    "update-electron-app": "^1.3.0"
  },
  "build": {
    "publish": {
      "provider": "github"
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
